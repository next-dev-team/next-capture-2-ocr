{
  "name": "ocr-screen-capture",
  "version": "1.0.0",
  "description": "OCR Screen Capture app for Mac using Electron",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "build": {
    "appId": "com.example.ocr-screen-capture",
    "productName": "OCR Screen Capture",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "eng.traineddata",
      "khm.traineddata",
      "khm+eng.traineddata",
      "osd.traineddata"
    ],
    "asarUnpack": [
      "node_modules/tesseract.js/**/*"
    ],
    "files": [
      "**/*",
      "!src/**/*",
      "!dist/**/*",
      "!tests/**/*",
      "!debug/**/*",
      "!debug-images/**/*",
      "!temp/**/*"
    ],
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "ocr",
    "screen-capture",
    "electron",
    "macos"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "electron-store": "^8.1.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "playwright": "^1.56.1"
  }
}
